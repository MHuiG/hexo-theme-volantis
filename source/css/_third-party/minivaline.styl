.l_main
	#comments
		position: relative
		#minivaline_container
			textarea.veditor
				resize: none !important
				background-image: url(https://i.loli.net/2020/05/23/SOms95ABciyH3hR.gif)
				transition: all 0.25s ease-in-out 0s
				background-size: 7em
				background-repeat: no-repeat
				background-position: right bottom
				&:focus
					background: transparent
					background-position: right bottom -15em
					transition: all 0.35s ease-in-out 0s